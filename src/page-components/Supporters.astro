---
// ========================================
// SUPPORTERS COMPONENT
// ========================================
// Partners and supporters section with animated particles background
//
// PURPOSE:
// - Showcases key partners and supporters who make TECS possible
// - Builds credibility through association with well-known organizations
// - Features animated background for visual appeal
// - Provides links to partner websites for additional information
//
// USAGE:
// - Used in main page to display supporting organizations
// - Features three main supporters with logos and links
// - Includes animated particles background for engagement
//
// FEATURES:
// - Animated particles background using Particles component
// - PixelCard components for each supporter
// - External links to supporter websites
// - Responsive grid layout for different screen sizes
// - Accessibility features with proper ARIA labels

import Particles from "../components/Particles.astro";
import PixelCard from "../components/PixelCard.astro";

export interface Props {
  className?: string; // Optional CSS class for styling customization
}

const { className = "" } = Astro.props;
---

<!-- Supporters Section -->
<section id="supporters" class={`section supporters-banner ${className}`} aria-label="Supporters">
  <div class="container">
    <!-- Animated Particles Background for visual interest -->
    <Particles
      particleCount={100}
      particleSpread={8}
      speed={0.05}
      particleColors={['#3ea86f', '#4fb87a', '#5fc885']}
      moveParticlesOnHover={false}
      particleHoverFactor={0.5}
      alphaParticles={false}
      particleBaseSize={4}
      sizeRandomness={0.5}
      cameraDistance={15}
      disableRotation={false}
    />
    
    <!-- Section heading -->
    <h2>Our Supporters</h2>
    
    <!-- Gratitude message for partners -->
    <p class="muted" style="margin-bottom:0.75rem">Thanks to our partners who make TECS possible</p>

    <!-- Grid of supporter organizations -->
    <div class="supporters-grid" role="list" aria-label="Supporters and partners">
      <!-- Stripe supporter card -->
      <PixelCard 
        variant="stripe"
        href="https://stripe.com/ie"
        logoSrc="/images/StripeLogo.png"
        alt="Stripe"
      />
      
      <!-- University of Limerick supporter card -->
      <PixelCard 
        variant="ul"
        href="https://www.ul.ie/"
        logoSrc="/uni-limerick-logo.svg"
        alt="University of Limerick"
      />
      
      <!-- Dogpatch Labs supporter card -->
      <PixelCard 
        variant="dogpatch"
        href="https://dogpatchlabs.com/"
        logoSrc="/images/dogpatch-labs-logo.png"
        alt="Dogpatch Labs"
      />
    </div>
  </div>
</section>

<style>
  /* Supporters banner */
  .supporters-banner{
    padding: 2.5rem 0;
  }

  .supporters-banner .container{
    background: var(--bg);
    border: 1px solid var(--border);
    padding: 2.5rem 2rem;
    border-radius: 12px;
    display:flex;
    flex-direction:column;
    align-items:center;
    gap: 1rem;
  }
  
  /* Dark theme supporters background */
  [data-theme="dark"] .supporters-banner .container {
    background: linear-gradient(135deg, rgba(62,168,111,0.05) 0%, rgba(62,168,111,0.02) 100%);
  }

  .supporters-banner .supporters-grid{
    width:100%;
    padding:1rem 0;
    display:grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items:center;
    justify-items:center;
  }

  /* Individual supporter hover effects */
  .supporters-banner .supporter-stripe:hover {
    background: rgba(147, 112, 219, 0.1);
    border-color: rgba(147, 112, 219, 0.3);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .supporters-banner .supporter-ul:hover {
    background: rgba(62, 168, 111, 0.1);
    border-color: rgba(62, 168, 111, 0.3);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .supporters-banner .supporter-dogpatch:hover {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.2);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  @media (max-width: 640px) {
    .supporters-banner { 
      padding: 1.25rem 0; 
    }
    
    .supporters-banner .container {
      padding: 1.25rem 1rem;
    }
  }

  @media (max-width: 980px) {
    .supporters-banner .supporters-grid{ 
      grid-template-columns: repeat(3, minmax(0,1fr)); 
    }
  }

  @media (max-width: 1200px) {
    .supporters-banner .supporters-grid{ 
      grid-template-columns: 1fr; 
      gap: 4rem; 
      justify-items: center; 
      max-width: 80%; 
      margin: 0 auto; 
    }
    
    .supporters-banner .supporter {
      width: 100%;
      max-width: 300px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>