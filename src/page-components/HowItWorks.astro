---
// ========================================
// HOW IT WORKS COMPONENT
// ========================================
// Process explanation section with animated background and numbered step cards
//
// PURPOSE:
// - Explains the TECS competition process in clear, numbered steps
// - Shows participants what to expect throughout the competition
// - Features testimonial from industry leader for credibility
// - Uses visual elements to make the process engaging
//
// USAGE:
// - Used in main page to explain the competition workflow
// - Includes three numbered steps with detailed explanations
// - Features animated background and interactive cards
//
// FEATURES:
// - Animated squares background for visual interest
// - Three numbered step cards with hover effects
// - Industry testimonial with profile image
// - Responsive design with clear visual hierarchy
// - Interactive elements to engage users

import Squares from "../components/Squares.astro";
import TiltedCardWithNumber from "../components/TiltedCardWithNumber.astro";

export interface Props {
  className?: string; // Optional CSS class for styling customization
}

const { className = "" } = Astro.props;
---

<!-- How It Works Section -->
<section id="how" class={`section ${className}`}>
  <!-- Animated Squares Background for visual interest -->
  <Squares 
    direction="diagonal"
    speed={0.2}
    borderColor="rgba(62, 168, 111, 0.12)"
    squareSize={50}
    hoverFillColor="rgba(62, 168, 111, 0.03)"
  />
  
  <div class="container">
    <!-- Section heading -->
    <h2>How It Works</h2>
    
    <!-- Three-step process cards -->
    <div class="cards">
      <!-- Step 1: Project Selection -->
      <TiltedCardWithNumber 
        number="1"
        title="Choose Your Project"
        content="Apply with an idea you'd like to work on or develop further. It could be an app, business idea, social enterprise, research project, coding project, creative work, or something completely different."
        scaleOnHover={1.05}
        rotateAmplitude={8}
      />
      
      <!-- Step 2: Weekly Progress Updates -->
      <TiltedCardWithNumber 
        number="2"
        title="Share Weekly Updates"
        content="Take 5 minutes each week to share your progress, challenges encountered, and plans for the next week. Build momentum through consistent progress."
        scaleOnHover={1.05}
        rotateAmplitude={8}
      />
      
      <!-- Step 3: Mentorship and Support -->
      <TiltedCardWithNumber 
        number="3"
        title="Get Expert Support"
        content="Join a community of builders and receive feedback from experienced mentors. Prizes are awarded based on progress made during the competition."
        scaleOnHover={1.05}
        rotateAmplitude={8}
      />
    </div>

    <!-- Industry Testimonial Section -->
    <figure class="quote-figure">
      <!-- Profile image of the testimonial author -->
      <div class="quote-avatar">
        <img
          src="/images/Bobby-Healy-Manna-Aero.jpeg"
          alt="Bobby Healy, founder of Manna Aero"
          loading="lazy"
          width="160"
          height="160"
        />
      </div>

      <!-- Testimonial quote and attribution -->
      <blockquote>
        <p>"Whether you're interested in making an idea happen, or want to pursue an interest in science, tech or business, I'd wholeheartedly recommend taking part in TECS. If I was taking part, I would programme a drone that delivered chips from my local takeaway."</p>
        <figcaption>â€” <strong>Bobby Healy</strong>, founder of <em>Manna Aero</em> &mdash; TECS judge.</figcaption>
      </blockquote>
    </figure>

  </div>
</section>

<style>
  /* How It Works section styling */
  #how {
    background: transparent;
    position: relative;
    overflow: hidden;
  }

  #how .container {
    position: relative;
    z-index: 2;
  }
</style>